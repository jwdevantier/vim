{
    "languageserver": {
        "clojure": {
            "command": "bash",
            "args": ["-c", "clojure-lsp"],
            "rootPatterns": ["deps.edn"],
            "filetypes": ["clojure"],
            "trace.server": "verbose"
        },
        "racket": {
            "command": "racket",
            "args": [
                "--lib",
                "racket-langserver"
            ],
            "filetypes": [
                "scheme",
                "racket"
            ]
        }
    }
}
